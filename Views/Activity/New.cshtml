@model Act
<div style="display: inline-block; width:650px;"><h1>Create an Activity </h1></div>
<div style="display: inline-block; width:250px;float:right;"><h6><a asp-action="Dashboard">Dashboard</a> |<a href="/Logout">Lougout</a></h6></div>




<div style="display: inline-block; width:350px;">

    <form asp-action="CreatePost" asp-controller="Activity" method="post">
        <div class="form-group">
            <span asp-validation-for="Title"></span>
            <br>
            <label asp-for="Title">Title</label>
            <input class="form-control" asp-for="Title" style="width:300px">
        </div>

        <div class="form-group">
            <span asp-validation-for="Date"></span>
            <br>
            <label asp-for="Date">Date:</label>
            <input type="date" class="form-control" asp-for="Date" style="width:300px">
        </div>

        <div class="form-group">
            <span asp-validation-for="Time"></span>
            <br>
            <label asp-for="Time">Time:</label>
            <input type="text" class="form-control" asp-for="Time" style="width:300px">
        </div>

        <div class="form-group">
            <span asp-validation-for="Duration"></span>
            <br>
            <label asp-for="Duration">Duration:</label>

            <input type="number" asp-for="Duration" style="width:300px">
            <select name="dur">
                <option value="minutes">Minutes</option>
                <option value="hours">Hours</option>
                <option value="days">Days</option>
            </select>
        </div>

        <div class="form-group">
            <span asp-validation-for="Description"></span>
            <br>
            <label asp-for="Description">Description:</label>
            <input class="form-control" asp-for="Description" style="width:300px">
        </div>



        <br>
        <button class="btn btn-primary">Create Activity</button>
    </form>

</div>